{{> admin-nav }}
<section class="cart">
    <div class="container">
        <h2 class="block_title">All offers</h2>

        <section class="menu">
            <div class="container">

                <div class="wrap">
                    {{#if offers}}
                    {{#each offers}}
                    <div class="col">
                        {{#_if expected='Hit' val=status }}
                        <div class="col_status hit">
                            Hit
                        </div>
                        {{/_if}}

                        {{#_if expected='New' val=status }}
                        <div class="col_status new">
                            New
                        </div>
                        {{/_if}}

                        <div class="col_face">
                            <a href="/single/{{this.id}}">
                                <img src="{{this.thumb_image}}" alt="">
                            </a>
                        </div>
                        <div class="col_description offer_wrap">
                            <a href="/single/{{this.id}}" class="page">
                                <h3 class="col_title">{{this.title}}</h3>
                                <p class="col_text">
                                    {{this.description}}
                                </p>
                            </a>


                            <ul
                                class="col_size {{#_if expected='Sauces' val=category}} none{{/_if}}{{#_if expected='Drinks' val=category}} none{{/_if}}">
                                {{#if this.price_small }}
                                <li onclick="pieSize(this,{{this.price_small}})" class="active">25см/800гр</li>
                                {{/if}}
                                {{#if this.price_big }}
                                <li onclick="pieSize(this,{{this.price_big}})" {{#if this.price_small}}
                                    {{else}}class="active" {{/if}}>32см/1200г</li>
                                {{/if}}
                            </ul>

                            <ul class="col_footer">
                                <li>
                                    <h3 class="col_price offer_price">
                                        {{#if this.price_small}}{{this.price_small}}{{else}}{{this.price_big}}{{/if}}
                                        грн.</h3>
                                </li>
                                <li>
                                    <a href="/offer-edit/{{this.id}}" class="btn to_order">
                                        Edit
                                    </a>
                                    <button
                                        onclick="Offer.remove(this,'?id={{this.id}}&image={{this.image}}&thumb={{this.thumb_image}}')"
                                        class="btn remove_order">
                                        Remove
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
            </div>
        </section>

    </div>
</section>