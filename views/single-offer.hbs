<section class="pie">
    <div class="container">
        <img src="{{offer.image}}" alt="" class="pie_face">
        <div class="pie_description offer_wrap " data-col_footer>
            <h2 class="pie_title">
                {{offer.title}}
            </h2>
            <div class="pie_line">
                <p class="text">
                    {{offer.description}}
                </p>
            </div>
            {{#if offer.storage}}
            <div class="pie_line">
                <p class="text bold">
                    Состав:
                </p>
                <p class="text">
                    {{offer.storage}}
                </p>
            </div>
            {{/if}}
            <ul class="pie_size col_size">
                {{#if none}}

                {{else}}
                {{#if offer.price_small }}
                <li onclick="pieSize(this,{{offer.price_small}})" class="active">25см/800гр</li>
                {{/if}}
                {{#if offer.price_big }}
                <li onclick="pieSize(this,{{offer.price_big}})" {{#if offer.price_small}} {{else}}class="active"
                    {{/if}}>
                    32см/1200г</li>
                {{/if}}
                {{/if}}
            </ul>

            <ul class="pie_footer  ">
                <li>
                    <h3 class="pie_price offer_price col_price">
                        {{#if offer.price_small}}{{offer.price_small}}{{else}}{{offer.price_big}}{{/if}} грн.</h3>
                </li>

                <li>
                    <button class="btn to_order" onclick="toOrder(this,[['id',{{offer.id}}]])">
                        В корзину
                    </button>
                </li>
            </ul>

        </div>
    </div>
</section>


