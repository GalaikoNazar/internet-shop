{{#if sauces}}
<section class="proposition">
    <div class="container">
        <h2 class="block_title">
            Не забудьте соус, так будет еще вкуснее
        </h2>
        <div class="wrap">
            {{#each sauces}}
            <div class="col">
                <div class="col_status new">
                    New
                </div>
                <div class="col_face">
                    <img src="{{this.thumb_image}}" alt="">
                </div>
                <div class="col_description">
                    <a href="/single" class="page">
                        <h3 class="col_title">{{this.title}}</h3>
                        <p class="col_text">
                            90 гр
                        </p>
                    </a>
                    <ul class="col_footer">
                        <li>
                            <h3 class="col_price">{{this.price_small}} грн.</h3>
                        </li>
                        <li>
                            <button class="btn to_order" data-addition="true"
                                onclick="toOrder(this,[['id',{{this.id}}]])">
                                В корзину
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}